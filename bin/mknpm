#!/bin/bash

if [ "$1" = "" ]; then
  echo It needs command name.
  exit
fi
mkdir $1
cd $1
git init
echo node_modules/ >> .gitignore

if [ "`command -v mitman`" != "" -a "$2" != "" ]; then
  mitman $2 $1
fi

npm init -y

mknpm-package-json package.json $1

mkdir bin
cd bin
echo "#!/bin/bash" >> $1
chmod 755 $1
vim $1
